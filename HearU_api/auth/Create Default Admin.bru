meta {
  name: Create Default Admin
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/setup/create-default-admin
  body: none
}

assert {
  res.status: eq 201
  res.body.message: eq Default admin ensured
}

tests {
  test("Admin created successfully", function() {
    expect(res.getBody().admin).to.have.property('id');
    expect(res.getBody().admin.is_admin).to.be.true;
  });
}
